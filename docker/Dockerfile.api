FROM python:3.6.13

RUN ln -sf /usr/share/zoneinfo/America/Chicago /etc/localtime

RUN pip3 install Flask==1.1.2 \
                 hotqueue==0.2.8 \
                 pytest==6.2.3 \
                 redis==3.5.3 \
                 requests==2.25.1 \
                 numpy \
                 pandas

COPY ./src/api.py /app/
COPY ./src/jobs.py /app/
COPY ./src/Austin_Affordable_Housing.json /app/

WORKDIR /app

CMD ["python", "/app/api.py"]